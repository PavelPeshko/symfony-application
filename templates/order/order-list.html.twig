{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserName</th>
                <th>UserEmail</th>
                <th>DeliveryMethod</th>
                <th>TrackingNumber</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.userName }}</td>
                <td>{{ order.userEmail }}</td>
                <td>{{ order.deliveryMethod }}</td>
                <td>{{ order.trackingNumber }}</td>
                <td>
                    <a href="{{ path('display_order', {'id': order.id}) }}">show</a>
                    <a href="{{ path('edit_order', {'id': order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('create_order') }}">Create new</a>
{% endblock %}
